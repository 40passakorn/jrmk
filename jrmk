    <script>
        /* ------------------
        JavaScript for Interactivity
        ------------------ */

        const form = document.getElementById('booking-form');
        const priceElements = document.querySelectorAll('.price');
        const currencyToggle = document.getElementById('currency-toggle');
        const currencyThb = document.getElementById('currency-thb');
        const currencyUsd = document.getElementById('currency-usd');
        const lightbox = document.getElementById('lightbox');
        const lightboxImage = document.getElementById('lightbox-image');

        const USD_RATE = 35.0; // สมมติเรต 35 บาทต่อ 1 USD

        // ===================================
        // A. Currency Toggle Functionality
        // ===================================

        /**
         * Toggles the displayed currency between THB and USD.
         */
        function toggleCurrency() {
            const isUSD = currencyToggle.checked;

            priceElements.forEach(el => {
                const thbPrice = el.getAttribute('data-thb');
                const usdPrice = el.getAttribute('data-usd');

                if (isUSD) {
                    el.textContent = `$ ${usdPrice}`;
                } else {
                    el.textContent = `฿ ${thbPrice}`;
                }
            });

            // Highlight the active currency
            currencyThb.style.color = isUSD ? 'var(--color-dark-ink)' : 'var(--color-red)';
            currencyUsd.style.color = isUSD ? 'var(--color-red)' : 'var(--color-dark-ink)';
        }

        currencyToggle.addEventListener('change', toggleCurrency);
        // Initial call to set default currency state
        window.addEventListener('load', toggleCurrency); 

        // ===================================
        // B. Lightbox Functionality
        // ===================================

        /**
         * Opens the lightbox with the specified image URL.
         * @param {string} url - The URL (or placeholder data) of the image.
         */
        function openLightbox(url) {
            lightboxImage.src = url;
            lightbox.style.display = 'flex';
        }

        /**
         * Closes the lightbox.
         */
        function closeLightbox() {
            lightbox.style.display = 'none';
            lightboxImage.src = '';
        }
        
        // Close lightbox when clicking outside the image
        lightbox.addEventListener('click', (e) => {
            if (e.target === lightbox) {
                closeLightbox();
            }
        });

        // ===================================
        // C. Form Validation and Submission (Simulated)
        // ===================================
        
        /**
         * Sets error state for an input field.
         * @param {string} fieldId - The ID of the input field.
         * @param {string} errorId - The ID of the error message element.
         * @param {string} message - The error message to display.
         * @returns {boolean} always false
         */
        function setError(fieldId, errorId, message) {
            const input = document.getElementById(fieldId);
            const error = document.getElementById(errorId);
            input.classList.add('input-error');
            input.setAttribute('aria-invalid', 'true');
            error.textContent = message;
            return false;
        }

        /**
         * Clears error state for an input field.
         * @param {string} fieldId - The ID of the input field.
         * @param {string} errorId - The ID of the error message element.
         * @returns {boolean} always true
         */
        function clearError(fieldId, errorId) {
            const input = document.getElementById(fieldId);
            const error = document.getElementById(errorId);
            input.classList.remove('input-error');
            input.removeAttribute('aria-invalid');
            error.textContent = '';
            return true;
        }

        /**
         * Validates all required form fields.
         * @returns {boolean} True if all required fields are valid, false otherwise.
         */
        function validateForm() {
            let isValid = true;
            const name = document.getElementById('name').value.trim();
            const phone = document.getElementById('phone-form').value.trim();
            const emailOrLine = document.getElementById('line-email').value.trim();
            const date = document.getElementById('date').value.trim();
            const location = document.getElementById('location').value.trim();
            const tableCount = parseInt(document.getElementById('table-count').value.trim());

            // 1. Name
            if (name === '') { isValid = setError('name', 'name-error', 'กรุณากรอกชื่อ-นามสกุล') && isValid; } 
            else { clearError('name', 'name-error'); }

            // 2. Phone (9 or 10 digits only)
            const phoneRegex = /^\d{9,10}$/;
            if (!phoneRegex.test(phone)) { isValid = setError('phone-form', 'phone-error', 'กรุณากรอกเบอร์โทร 9-10 หลัก (เฉพาะตัวเลข)') && isValid; }
            else { clearError('phone-form', 'phone-error'); }

            // 3. Line/Email
            if (emailOrLine === '') { isValid = setError('line-email', 'email-error', 'กรุณากรอกไลน์ ID หรืออีเมล') && isValid; }
            else { clearError('line-email', 'email-error'); }

            // 4. Date
            if (date === '') { isValid = setError('date', 'date-error', 'กรุณาระบุวันที่จัดงาน') && isValid; }
            else { clearError('date', 'date-error'); }

            // 5. Location
            if (location === '') { isValid = setError('location', 'location-error', 'กรุณาระบุสถานที่จัดงาน') && isValid; }
            else { clearError('location', 'location-error'); }

            // 6. Table Count (Min 10)
            if (isNaN(tableCount) || tableCount < 10) { isValid = setError('table-count', 'count-error', 'จำนวนโต๊ะต้องไม่ต่ำกว่า 10') && isValid; }
            else { clearError('table-count', 'count-error'); }

            return isValid;
        }

        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            if (validateForm()) {
                const submitBtn = form.querySelector('.btn-primary');
                const originalText = submitBtn.innerHTML;

                // Show Loading State
                submitBtn.disabled = true;
                submitBtn.innerHTML = 'กำลังส่ง...';

                // Simulate API call delay
                await new Promise(resolve => setTimeout(resolve, 1500)); 

                // Process data (for demonstration)
                const formData = new FormData(form);
                const data = Object.fromEntries(formData.entries());
                console.log('Booking Request Sent:', data);

                // Show success message
                document.getElementById('booking-form-section').style.display = 'none';
                document.getElementById('booking-success').style.display = 'block';
                
                // Reset button state (optional, as the form disappears)
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalText;
            }
        });


        // ===================================
        // D. Smooth Scroll & Mobile Menu
        // ===================================
        
        const navLinksContainer = document.getElementById('nav-links');
        const menuToggleBtn = document.getElementById('menu-toggle-btn');

        // Toggle mobile menu visibility
        menuToggleBtn.addEventListener('click', () => {
            navLinksContainer.classList.toggle('active');
            // Basic mobile menu implementation:
            if (navLinksContainer.classList.contains('active')) {
                // For simplicity in single-file, we just use a small fix here
                navLinksContainer.style.display = 'flex';
                navLinksContainer.style.flexDirection = 'column';
                navLinksContainer.style.position = 'absolute';
                navLinksContainer.style.top = '100%';
                navLinksContainer.style.left = '0';
                navLinksContainer.style.width = '100%';
                navLinksContainer.style.backgroundColor = 'var(--color-off-white)';
                navLinksContainer.style.padding = '10px 0';
                navLinksContainer.style.boxShadow = '0 5px 5px rgba(0,0,0,0.1)';
            } else {
                navLinksContainer.style.display = 'none';
            }
        });

        // Set active class on scroll
        const sections = document.querySelectorAll('section');
        const navItems = document.querySelectorAll('.nav-links a');

        window.addEventListener('scroll', () => {
            let current = '';
            sections.forEach(section => {
                const sectionTop = section.offsetTop - 100; // Offset for sticky navbar
                const sectionHeight = section.clientHeight;
                if (pageYOffset >= sectionTop) {
                    current = section.getAttribute('id');
                }
            });

            navItems.forEach(a => {
                a.classList.remove('active');
                if (a.getAttribute('href').includes(current)) {
                    a.classList.add('active');
                }
            });
        });

        // Close mobile menu on link click
        navLinksContainer.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', () => {
                if (window.innerWidth < 768) {
                    navLinksContainer.classList.remove('active');
                    navLinksContainer.style.display = 'none';
                }
            });
        });

    </script>
</body>
</html>
